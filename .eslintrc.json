{
  "root": true,
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "quotes": [2, "single"],
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
  }
}
